@model CalculadoraPrestamo.Models.Cliente
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "`Crear Cliente";

    <div class="container-lg col-4">
        <h1>Crear Cliente</h1>
        <form asp-action="CrearCliente" method="POST">
            <div class="input-group mb-3 w-100">
            <ul>
                <li>
                    <label asp-for="Nombre" class="input-group-text">Nombre</label>
                    <input asp-for="Nombre" type="text" class="form-control" placeholder="Ingresar Nombre" id="nombre">
                </li>
                <li> 
                    <label asp-for="Direccion" class="input-group-text">Direccion</label>
                    <input asp-for="Direccion" type="text" class="form-control" placeholder="Ingresar Direccion" id="direccion">
                </li>
                <li>
                    <label asp-for="DNI" class="input-group-text">DNI</label>
                    <input asp-for="DNI" type="text" class="form-control" placeholder="Ingresar DNI" id="DNI">
                </li>
            </ul>
            </div>
            <button href="@Url.Action("AbmCliente", "Cliente")" type="submit" class="btn btn-primary">Guardar</button>
        </form>
        
    </div>

}


